@model UsersManager.Models.Photo

@{ 
    System.Web.Mvc.SelectList photoVisibilities = ViewBag.PhotoVisibilities;
    int photoVisibility = Model.PhotoVisibility != null ? Model.PhotoVisibility.Id : -1;
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CreationDate)
@Html.HiddenFor(model => model.VisibilityId)

<div class="form-horizontal">

    <fieldset class="formField">
        <legend>Identification</legend>
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Title) } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </fieldset>

    <fieldset class="formField">
        <legend>@Html.DisplayNameFor(model => model.Description)</legend>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = "8", placeholder = Html.DisplayNameFor(model => model.Description) } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </fieldset>

    <fieldset class="formField">
        <legend>@Html.DisplayNameFor(model => model.GUID)</legend>
        @Helper.ImageUploader(Model.Id, Model.GetUrl(), "ImageData", "~/ImagesData/Loading_icon.gif", "Cliquez pour choisir l'image")
        @Html.ValidationMessageFor(model => model.GUID, "", new { @class = "text-danger" })
    </fieldset>

    <fieldset class="formField">
        <legend>@Html.DisplayNameFor(model => model.PhotoVisibility)</legend>
        @Helper.ListToRadioButtonGroup("PhotoVisibility", photoVisibilities, photoVisibility)
        @Html.ValidationMessageFor(model => model.PhotoVisibility, "", new { @class = "text-danger" })
    </fieldset>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Soumettre" class="btn btn-default" />
        </div>
    </div>
</div>}



