@model IEnumerable<UsersManager.Models.Photo>
<link rel="stylesheet" href="~/Content/original.bootstrap.css">
<link rel="stylesheet" href="~/Content/Site.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<p>
    @Helper.GlyphiconAction("Create", "glyphicon glyphicon-plus", "Ajouter une photo")
</p>

<div class="row row-cols-6 margin-top-3">
    @foreach (var item in Model)
    {
        <div class="col photo-border margin-top-3">
            <div class="">
                <div class="card-title">@Helper.AvatarProfilLink(item.User)</div>
                <h3 class="margin-top-3">@item.Title</h3>
                <div class="">
                    <img src="@Url.Content(item.GetUrl(false))" width="150" height="100" alt="@item.Description" />
                </div>
                <div class="margin-top-3">
                    @Helper.ShowRating(item.Ratings)
                </div>
            </div>
        </div>
    }
</div>
